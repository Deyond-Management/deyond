{
  "name": "crypto-wallet-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "clean": "npm run clean:ios && npm run clean:android && npm run clean:cache",
    "clean:ios": "rm -rf ios/build ios/Pods ios/DerivedData",
    "clean:android": "rm -rf android/build android/app/build android/.gradle",
    "clean:cache": "rm -rf coverage .expo dist node_modules/.cache",
    "clean:modules": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:modules && npm cache clean --force",
    "reinstall": "npm run clean:all && npm install --legacy-peer-deps",
    "reset": "watchman watch-del-all 2>/dev/null || true && rm -rf $TMPDIR/metro-* $TMPDIR/haste-* && npm run clean:cache"
  },
  "dependencies": {
    "@lottiefiles/dotlottie-react": "^0.17.10",
    "@noble/ciphers": "^2.1.1",
    "@noble/curves": "^1.9.0",
    "@noble/hashes": "^1.6.1",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-navigation/bottom-tabs": "^7.8.5",
    "@react-navigation/native": "^7.1.20",
    "@react-navigation/native-stack": "^7.6.3",
    "@react-navigation/stack": "^7.6.4",
    "@reduxjs/toolkit": "^2.5.0",
    "@sentry/react-native": "^7.6.0",
    "bip39": "^3.1.0",
    "ethers": "^6.13.4",
    "expo": "~54.0.24",
    "expo-camera": "^17.0.9",
    "expo-clipboard": "~8.0.7",
    "expo-crypto": "^15.0.7",
    "expo-device": "^8.0.10",
    "expo-file-system": "~19.0.21",
    "expo-haptics": "^15.0.7",
    "expo-local-authentication": "^17.0.7",
    "expo-localization": "^17.0.7",
    "expo-notifications": "^0.32.15",
    "expo-secure-store": "^15.0.7",
    "expo-sharing": "~14.0.8",
    "i18n-js": "^4.5.1",
    "lottie-react-native": "^7.3.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "^2.29.1",
    "react-native-qrcode-svg": "^6.3.20",
    "react-native-reanimated": "^4.1.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0",
    "react-native-svg": "^15.15.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "^13.12.4",
    "react-native-worklets": "^0.6.1",
    "react-redux": "^9.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@testing-library/react-native": "^12.7.2",
    "@types/detox": "^17.14.3",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "detox": "^20.46.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@reduxjs/toolkit|immer|redux-persist|react-redux|@noble/.*)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
